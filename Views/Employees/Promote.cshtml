
@model TSAIdentity.ViewModels.PromoteViewModel

<h4>Promote Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Promote">
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" readonly/>
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DesignationId" class="control-label"></label>
                <select asp-for="DesignationId" class="form-control" asp-items="ViewBag.DesignationId"><option value="">None</option></select>
                <span asp-validation-for="DesignationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Promote" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>