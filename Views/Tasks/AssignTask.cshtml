@model AssignTaskViewModel

<h1>Assign Task</h1>
<div class="row">
    <div class="col-md-4">

        <form asp-action="AssignTask">
            <input type="hidden" asp-for="TaskId" />
            <div class="form-group">
                <label asp-for="TaskName"></label>
                <input asp-for="TaskName" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="SelectedEmployeeId" class="control-label"></label>
                <select asp-for="SelectedEmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"><option value="">None</option></select>
            </div>

            <button type="submit" class="btn btn-primary">Assign Task</button>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}