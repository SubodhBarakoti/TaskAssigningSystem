@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Organizations" asp-action="Details" title="Manage"><i class="fas fa-user"></i> Profile</a>
            </li>
        }
        else if (User.IsInRole("Employee"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Employees" asp-action="Profile" title="Manage"><i class="fas fa-user"></i> Profile</a>
            </li>
        }
        <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark"><i class="fas fa-sign-out-alt"></i> Logout</button>
        </form>
        </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-sign-in-alt"></i><span> Login</span></a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Organizations" asp-action="Create"><i class="fas fa-user-plus"></i><span>Register</span></a>
    </li>
    
}
</ul>
